<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.lejla.gosarajevo.MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="613dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="512dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/home_screen"
            >

            <Button
                android:text="Where To Eat"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:id="@+id/button1"
                android:layout_row="26"
                android:layout_column="0"
                android:background="@null"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:gravity="center_horizontal|center"
                android:drawableLeft="@drawable/ic_eat"
                android:drawablePadding="1dip"
                android:paddingLeft="120dip"
                android:paddingRight="120dip"
                />

            <Button
                android:text="Where To Sleep"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:id="@+id/button2"
                android:layout_row="25"
                android:layout_column="0"
                android:background="@null"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:drawableLeft="@drawable/ic_zzz_sleep_symbol"
                android:gravity="center_horizontal|center"
                android:drawablePadding="1dip"
                android:paddingLeft="120dip"
                android:paddingRight="120dip"
                />

            <Button

                android:text="Where To Go"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:id="@+id/button3"
                android:layout_row="24"
                android:layout_column="0"
                android:background="@null"
                android:textColor="@color/orange"
                android:drawableLeft="@drawable/ic_pin"
                android:gravity="center_horizontal|center"
                android:drawablePadding="1dip"
                android:paddingLeft="120dip"
                android:paddingRight="120dip"
                />


        </GridLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>